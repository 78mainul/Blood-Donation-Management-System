          <TableColumn fx:id="emailCol" prefWidth="75.0" text="Email" />
            <TableColumn fx:id="habitlCol" prefWidth="75.0" text="Habit" />
        </columns>
      </TableView>
      <Label fx:id="detailslabel" layoutX="413.0" layoutY="63.0" prefHeight="21.0" prefWidth="98.0" text="Donor Details">
         <font>
            <Font name="Arial Narrow Bold" size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
