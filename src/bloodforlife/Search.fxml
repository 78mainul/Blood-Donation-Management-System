         <children>
            <Button layoutX="28.0" layoutY="234.0" mnemonicParsing="false" onAction="#handleSearch" text="Search" />
            <ImageView fitHeight="69.0" fitWidth="82.0" layoutX="14.0" layoutY="15.0" pickOnBounds="true" preserveRatio="true">
