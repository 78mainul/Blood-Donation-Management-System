                  <Image url="@images/Loa%20(6).png" />
               </image>
            </ImageView>
            <Label fx:id="searchlabel" layoutX="28.0" layoutY="160.0" prefHeight="21.0" prefWidth="149.0" text="Search Donor Here" textFill="WHITE">
               <font>
                  <Font name="Arial Narrow Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="blooddonorlable" layoutX="94.0" layoutY="34.0" prefHeight="29.0" prefWidth="191.0" text="Blood Donor Finder" textFill="WHITE">
               <font>
                  <Font name="Arial Narrow Bold" size="24.0" />
               </font>
            </Label>
            <Button fx:id="homebtn" layoutX="28.0" layoutY="347.0" mnemonicParsing="false" onAction="#handleHomeButton" text="Home" />
